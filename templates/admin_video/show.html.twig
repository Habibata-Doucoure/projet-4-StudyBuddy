{% extends 'base-backend.html.twig' %}

{% block title %}Vidéo{% endblock %}

{% block body %}

    <a href="{{ path('app_admin_video_index') }}" class="btn btn-dark">Retour</a>

    <div class="d-flex flex-wrap justify-content-between align-items-center">
    <h1>Vidéo</h1>
    {{ include('admin_video/_delete_form.html.twig') }}
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ video.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ video.description }}</td>
            </tr>
            <tr>
                <th>Nom de l'image</th>
                <td>{{ video.imageName }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ video.slug }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ video.duration }}</td>
            </tr>
            <tr>
                <th>Nom de la vidéo</th>
                <td>{{ video.videoName }}</td>
            </tr>
            <tr>
                <th>Modifier le</th>
                <td>{{ video.updatedAt ? video.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ video.creationDate ? video.creationDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_admin_video_edit', {'id': video.id}) }}" class="btn btn-success">Modifier</a>

{% endblock %}
