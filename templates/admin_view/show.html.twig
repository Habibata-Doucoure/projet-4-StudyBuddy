{% extends 'base-backend.html.twig' %}

{% block title %}Vues{% endblock %}

{% block body %}


    <a href="{{ path('app_admin_view_index') }}" class= "btn btn-dark mb-3">Retour</a>

    <div class="d-flex flex-wrap justify-content-between align-items-center">

    <h1>Vue</h1>
        {{ include('admin_view/_delete_form.html.twig') }}
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ view.id }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ view.state ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ view.slug }}</td>
            </tr>
            <tr>
                <th>Vue le</th>
                <td>{{ view.viewDate ? view.viewDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_admin_view_edit', {'id': view.id}) }}" class= "btn btn-success">Modifier</a>

{% endblock %}
