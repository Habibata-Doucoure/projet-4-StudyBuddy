{% extends 'base-backend.html.twig' %}

{% block title %}Voir la liste{% endblock %} 
{# views index=voir l'indexe #}

{% block body %}

<div class="d-flex flex-wrap justify-content-between align-items-center">
    <h1>Les vues</h1>
    <a href="{{ path('app_admin_view_new') }}" class="btn btn-success"><i class="align-middle" data-feather="plus"></i></a>
</div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Etat</th>
                <th>Slug</th>
                <th>Vue le</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for view in views %}
            <tr>
                <td>{{ view.id }}</td>
                <td>{{ view.state ? 'Yes' : 'No' }}</td>
                <td>{{ view.slug }}</td>
                <td>{{ view.viewDate ? view.viewDate|date('Y-m-d H:i:s') : '' }}</td>
                <td class="text-end">
                    <a href="{{ path('app_admin_view_show', {'id': view.id}) }}"class="btn btn-warning"><i class="align-middle" data-feather="eye"></i></i></a>
                    <a href="{{ path('app_admin_view_edit', {'id': view.id}) }}"class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune donnée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
