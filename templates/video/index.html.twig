{% extends 'base.html.twig' %}

{% block title %}Les vidéos{% endblock %}

{% block body %}


<main class="container-lg py-4">
    <h1>Les vidéos</h1>

    <div class="row">
    {% for video in videos %}

        <div class="col-12 col-md-4 col-xl-3 mb-3"> 
            <div class="card">
                <video controls>
                    <source src="/videos/{{video.videoName}}" class="card-img-top" type="video/webm">
                </video>
                <div class="card-body">
                    <h5 class="card-title">{{video.title}}</h5>
                    <p class="card-text">{{video.description}}</p>
                    <p class="card-text">{{video.duration}}</p>
                </div>
            </div>
        </div>

{% endfor %}
    </div>
</main>
{% endblock %}

