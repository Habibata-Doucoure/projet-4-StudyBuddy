{% extends 'base-backend.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_category_index') }}" class="btn btn-dark">Retour</a>
    <div class="d-flex flex-wrap justify-content-between align-items-center">

    <h1>Catégories</h1>
    {{ include('admin_category/_delete_form.html.twig') }}
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ category.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}" class="btn btn-success">Modifier</a>

{% endblock %}
