{% extends 'base-backend.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_author_index') }}" class="btn btn-dark">Retour</a>
    <h1>Auteur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ author.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ author.surname }}</td>
            </tr>
            <tr>
                <th>Biography</th>
                <td>{{ author.biography }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ author.imageName }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ author.slug }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ author.pseudo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_author_index') }}">back to list</a> 
    <a href="{{ path('app_admin_author_edit', {'id': author.id}) }}" class="btn btn-success">Modifier</a>


    {{ include('admin_author/_delete_form.html.twig') }}
{% endblock %}
